#!/usr/bin/env node
const args = process.argv.slice(2)
const method = args[0]
const params = args.slice(1)

const path = require('path');
let currentDir = process.env.INIT_CWD
if (!currentDir) {
  currentDir = process.cwd()
}

const exec_path = path.resolve(currentDir, './node_modules/.bin/knex')

if (method.includes('help') || method === '-h') {
  require('child_process')
    .spawn(`${exec_path}`, ['--knexfile', './node_modules/nexi/src/migration/config.js', '--help'], {stdio:'inherit'})
    .on('exit', function (error) {});
} else {
  require('child_process')
    .spawn(`${exec_path}`, ['--knexfile', './node_modules/nexi/src/migration/config.js', `migrate:${method}`, ...params], {stdio:'inherit'})
    .on('exit', function (error) {});
}
